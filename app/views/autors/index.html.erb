

<div class="categdespesas index">
<h2>Autores</h2>
<%= form_tag autors_path( format:"html"), :method => 'get' do %>  
<div class="row">
  <div class="col-lg-12">
    <div class="row">
        <div class="col-lg-5  form-group">  
          <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome para pesquisar" %>  
        </div>
        <div class="col-lg-2 form-group">
          <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
        </div>
      
        <div class="col-lg-2 form-group">  
            <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_autor_path %>';"><i class="fa fa-plus-circle"></i> Novo Autor</button></span>
      </div>
  </div>
</div>
</div>
<% end  %>  

<div class="table-responsive">
<table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
<thead>
<tr>
<th>COD</th>
<th>Nome</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @autors.each do |autor| %>
<tr>
  <td><%= "%06d"%autor.id %></td>
  <td><%= autor.nome %></td>
  <td><%= link_to 'Visualizar', autor %></td>
  <td><%= link_to 'Alterar', edit_autor_path(autor) %></td>   
  <td><%= link_to 'Excluir', autor, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir o autor?' } %></td>
</tr>
<% end %>
</tbody>
</table>
</div>

<%= paginate @autors%>
</div>