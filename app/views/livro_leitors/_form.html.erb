<div class="livro_leitor form">

  <%= form_with(model: livro_leitor, local: true) do |form| %>
       <% if livro_leitor.errors.any? %>

         <div id="error_explanation" class="panel panel-danger mensagem-erro-cabecalho">
           <div class="panel-heading">
               <h3 class="panel-title"><%= pluralize(livro_leitor.errors.count, "error(s)") %> ao salvar:</h3>
            </div>
           <div class="panel-body">
             <ul>
             <% livro_leitor.errors.full_messages.each do |message| %>
               <li><%= message %></li>
             <% end %>
             </ul>
           </div>
         </div>
       <% end %>
    
    <div class="row">
       <div class="col-lg-6 form-group">   
           <%= form.label :data_inicio, :class => 'control-label required' %>
           <%= form.text_field :data_inicio, type: 'date', id: :user_nome, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :data_entrega, :class => 'control-label required' %>
           <%= form.text_field :data_entrega, type: 'date', id: :user_nome, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :data_possivel_entrega, :class => 'control-label required' %>
           <%= form.text_field :data_possivel_entrega, type: 'date', id: :user_nome, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :status, :class => 'control-label required' %>
           <%= form.text_field :status, id: :user_nome, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :observacao, :class => 'control-label required' %>
           <%= form.text_field :observacao, id: :user_nome, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :user_id, :class => 'control-label required' %>
           <%= form.collection_select :user_id, listUsersAll, :id, :nome, {:prompt => 'Selecionar'}, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :livro_id, :class => 'control-label required' %>
           <%= form.collection_select :livro_id, listLivrosAll, :id, :nome, {:prompt => 'Selecionar'}, :class => 'form-control' %>
       </div>
       <div class="col-lg-6 form-group">   
           <%= form.label :leitor_id, :class => 'control-label required' %>
           <%= form.collection_select :leitor_id, listLeitorsAll, :id, :nome, {:prompt => 'Selecionar'}, :class => 'form-control' %>
       </div>
    </div>
    </div>
    

    
      <div class="row">
          <div class="col-lg-7 form-group">  
            <input type="submit" name="commit" class="btn btn-primary colorprimarybtn" value="Salvar" data-disable-with="Salvando" />
            <%= link_to 'Voltar', livro_leitors_path, :class => "btn btn-primary colorprimarybtn"%>
          </div>
      </div>
   <% end %>                         
</div>
