
<div class="categdespesas index">
<h2>Livros </h2>
<%= form_tag livros_path( format:"html"), :method => 'get' do %>  
<div class="row">
  <div class="col-lg-12">
    <div class="row">
        <div class="col-lg-5  form-group">  
          <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome para pesquisar" %>  
        </div>
        <div class="col-lg-2 form-group">
          <%= submit_tag "Pesquisar", :class => "btn btn-primary colorprimarybtn" %>
        </div>
      
        <div class="col-lg-2 form-group">  
            <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary colorprimarybtn" type="button" onclick="javascript: location.href='<%= new_livro_path %>';"><i class="fa fa-plus-circle"></i> Novo livro</button></span>
      </div>
  </div>
</div>
</div>
<% end  %>  

<div class="table-responsive">
<table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
<thead>
<tr>
<th>COD</th>
<th>Nome</th>
<th>Edição</th>
<th>Qtd Páginas</th>
<th>Qtd Livros</th>
<th>Descrição</th>
<th>Editora</th>
<th>Categoria</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @livros.each do |livro| %>
<tr>
  <td><%= "%06d"%livro.id %></td>
  <td><%= livro.nome %></td>
  <td><%= livro.edicao %></td>
  <td><%= livro.qtd_paginas %></td>
  <td><%= livro.qtd_livros %></td>
  <td><%= livro.descricao %></td>
  <td><%= livro.editora.nome %></td>
  <td><%= livro.categore.nome %></td>
  <td><%= link_to 'Visualizar', livro %></td>
  <td><%= link_to 'Alterar', edit_livro_path(livro) %></td>   
  <td><%= link_to 'Excluir', livro, method: :delete,remote: true, class: 'remove-tag', data: { confirm: 'Deseja excluir este livro?' } %></td>
</tr>
<% end %>
</tbody>
</table>
</div>

<%= paginate @livros %>
</div>